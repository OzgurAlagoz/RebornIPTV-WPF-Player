<Window x:Class="RebornIPTV.MainWindow"
        xmlns:vm="clr-namespace:RebornIPTV.ViewModels"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vlc="clr-namespace:LibVLCSharp.WPF;assembly=LibVLCSharp.WPF"
        Title="Reborn IPTV Player" Height="600" Width="900"
        Background="#1E1E1E">

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="60" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>


            <Grid Grid.Column="0" Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBox Grid.Row="0"
                         Height="30"
                         VerticalContentAlignment="Center"
                         Padding="5"
                         Margin="0,0,0,5"
                         Background="#333333"
                         Foreground="White"
                         BorderBrush="#007ACC"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}">
                </TextBox>

                <ListBox x:Name="ChannelListBox" 
                         Grid.Row="1" 
                         Background="#252526" 
                         Foreground="White"
                         BorderThickness="0"
                         ItemsSource="{Binding Channels}" 
                         SelectedItem="{Binding SelectedChannel}"
                         DisplayMemberPath="Name">
                </ListBox>
            </Grid>
            <vlc:VideoView Grid.Column="1" 
                           MediaPlayer="{Binding MediaPlayer}"
                           Margin="5"/>
        </Grid>

        <StackPanel Grid.Row="1" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center">

            <Button Content="DOSYA AÇ" 
                    Command="{Binding OpenFileCommand}"  
                    Width="120" Height="40" 
                    Margin="10" 
                    Background="#007ACC" 
                    Foreground="White"
                    FontWeight="Bold"/>

            <Button Content="DURDUR" 
                    Command="{Binding StopCommand}" 
                    Width="120" Height="40" 
                    Margin="10" 
                    Background="#CA3030" 
                    Foreground="White"
                    FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>